{
  "name": "damax/services-client",
  "description": "PHP client for Damax Services.",
  "require": {
    "php-http/httplug": "^1.1",
    "php-http/client-common": "^1.7",
    "php-http/discovery": "^1.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.10",
    "matthiasnoback/symfony-dependency-injection-test": "^3.0",
    "php-coveralls/php-coveralls": "^2.1",
    "php-http/guzzle6-adapter": "^1.1",
    "php-http/logger-plugin": "^1.0",
    "php-http/mock-client": "^1.1",
    "symfony/framework-bundle": "^4.1",
    "symfony/phpunit-bridge": "^4.0"
  },
  "autoload": {
    "psr-4": { "Damax\\Services\\Client\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "Damax\\Services\\Client\\Tests\\": "tests/" }
  },
  "scripts": {
    "cs": "php-cs-fixer fix",
    "test": "simple-phpunit",
    "test-cc": "./bin/phpunit-coverage",
    "test-ci": "simple-phpunit --coverage-clover=build/logs/clover.xml",
    "test-publish": "php-coveralls"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.4-dev"
    }
  }
}
